<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="graftest.SendPage"
             Title="Отправка почты">
    
    <ContentPage.Content >
      
        <StackLayout>
            <Label Text="Адресат" ></Label>
            <Entry WidthRequest="100" Keyboard="Email" x:Name="AdressEmail" ></Entry>
            <Label Text="Тема" ></Label>
            <Entry WidthRequest="100" x:Name="HeaderEmail" ></Entry>
            <Label Text="Текст" ></Label>
            <Editor WidthRequest="100" HeightRequest="100" x:Name="BodyEmail"></Editor>
            <Label Text="Шифроватние" ></Label>
            <Switch x:Name="IsEnc"  HorizontalOptions="Start"></Switch>
            <Button Text="Отправить" WidthRequest="130" HeightRequest="50" Margin="50,0,50,20" Clicked="SendClik"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>